{
  "id": "bltcy-sora2",
  "name": {
    "en": "Sora2 Text/Image to Video",
    "zh": "Sora2 文本/图片生成视频"
  },
  "description": {
    "en": "Generate videos from text/images using Sora2 model",
    "zh": "使用 Sora2 模型从文本/图片生成视频"
  },
  "contentType": "video",
  "aiTaskType": "bltcy_sora2",
  "uploadServer": "bltcy",
  "cost": 0.2,
  "aiConfig": {
    "images": [],
    "prompt": "",
    "aspect_ratio": "16:9",
    "duration": "10"
  },
  "uiConfig": [
    {
      "type": "file-input",
      "label": {
        "en": "Image",
        "zh": "图片"
      },
      "path": "aiConfig.images",
      "accept": ["image"],
      "maxFiles": 1,
      "minFiles": 0,
      "placeholder": {
        "en": "Drag image here or from timeline, no image will text2video",
        "zh": "拖拽图片素材或时间轴片段到此处，无图片将会文生视频"
      }
    },
    {
      "type": "textarea-input",
      "label": {
        "en": "Prompt",
        "zh": "提示词"
      },
      "path": "aiConfig.prompt",
      "placeholder": {
        "en": "Describe the video motion you want to generate...",
        "zh": "描述你想要生成的视频动作..."
      },
      "required": true,
      "maxLength": 5000
    },
    {
      "type": "select-input",
      "label": {
        "en": "Aspect Ratio",
        "zh": "宽高比"
      },
      "path": "aiConfig.aspect_ratio",
      "options": [
        {
          "value": "16:9",
          "label": {
            "en": "16:9 (Landscape)",
            "zh": "16:9 (横屏)"
          }
        },
        {
          "value": "9:16",
          "label": {
            "en": "9:16 (Portrait)",
            "zh": "9:16 (竖屏)"
          }
        }
      ]
    },
    {
      "type": "select-input",
      "label": {
        "en": "Duration",
        "zh": "时长"
      },
      "path": "aiConfig.duration",
      "options": [
        {
          "value": "10",
          "label": {
            "en": "10 seconds",
            "zh": "10 秒"
          }
        },
        {
          "value": "15",
          "label": {
            "en": "15 seconds",
            "zh": "15 秒"
          }
        }
      ]
    }
  ]
}
