{
  "id": "ltx-2",
  "variant": "t2v",
  "web_app_id": 45532,
  "name": "ltx-2-t2v",
  "description": "使用LTX-2模型进行文本转视频，根据提示词直接生成高质量视频",
  "media_type": "video",
  "cost": 0.3,
  "input_mapping": {
    "prompt": {
      "mapping": "121:CLIPTextEncode.text",
      "type": "string",
      "default": "Under the night sky, Saber and Lancer face off. Saber grips her invisible holy sword and strikes. Lancer counters with his crimson spear. A deafening metallic clash reverberates. Saber sidesteps and retaliates. Tense music amplifies the duel as smoke swirls around them.",
      "validation": {
        "required": true,
        "minLength": 1,
        "maxLength": 5000,
        "description": "生成提示词，描述要生成的视频内容"
      }
    },
    "negative_prompt": {
      "mapping": "110:CLIPTextEncode.text",
      "type": "string",
      "default": "blurry, low quality, still frame, frames, watermark, overlay, titles, has blurbox, has subtitles, has music",
      "validation": {
        "required": false,
        "maxLength": 5000,
        "description": "负面提示词，描述不希望出现的内容"
      }
    },
    "aspect_ratio": {
      "mapping": "aspect_ratio",
      "type": "option",
      "default": "16:9",
      "validation": {
        "required": false,
        "description": "宽高比（如 16:9, 9:16, 1:1, 4:3, 3:4, 21:9）",
        "option": ["16:9", "9:16", "1:1", "4:3", "3:4", "21:9"]
      },
      "skip_mapping": true
    },
    "width": {
      "mapping": "111:EmptyImage.width",
      "type": "integer",
      "default": 1280,
      "validation": {
        "required": false,
        "min": 256,
        "max": 1920,
        "computed": true,
        "description": "视频宽度（由 aspect_ratio 自动计算）"
      }
    },
    "height": {
      "mapping": "111:EmptyImage.height",
      "type": "integer",
      "default": 720,
      "validation": {
        "required": false,
        "min": 256,
        "max": 1080,
        "computed": true,
        "description": "视频高度（由 aspect_ratio 自动计算）"
      }
    },
    "duration": {
      "mapping": "143:INTConstant.value",
      "type": "integer",
      "default": 5,
      "validation": {
        "required": false,
        "min": 1,
        "max": 20,
        "description": "视频时长（秒）"
      }
    }
  }
}